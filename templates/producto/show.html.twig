{% extends 'base.html.twig' %}

{% block title %}Producto{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Producto: {{producto.nombre}}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ producto.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ producto.nombre }}</td>
            </tr>
            <tr>
                <th>Descripcion</th>
                <td>{{ producto.descripcion }}</td>
            </tr>
            <tr>
                <th>Precio</th>
                <td>{{ producto.precio }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ producto.disponible ? 'Si' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <div class="col-1">
    <a href="{{ path('app_producto_index') }}" class="btn btn-success btn-sm">Volver</a>
    </div>
    <div class="col-1">

    <a href="{{ path('app_producto_edit', {'id': producto.id}) }}" class="btn btn-primary btn-sm">Editar</a>
    </div>
    <div class="col-1">
    {{ include('producto/_delete_form.html.twig') }}
    </div>
    </div>
</div>
{% endblock %}
